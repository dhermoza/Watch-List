
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300%>');">
  <div class="container text-center">
    <h1 class="display-4"><%= @list.name %></h1>
  </div>
</div>

<div class="d-flex justify-content-end my-5">
    <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-flat" %>
</div>

<div class="container my-5 d-flex justify-content-center">
  <% @list.movies.each do |m| %>
    <div class="card" style="width: 18rem;">
      <img src='<%=m.poster_url%>' class="card-img-top" alt="Poster URL">
      <div class="card-body">
        <h5 class="card-title"><%= m.title %></h5>
        <p class="card-text"><i class="fas fa-star"></i> <%= m.rating %></p>
        <p class="card-text"><%= m.overview %></p>
        <% m.bookmarks.each do |m| %>
          <div class="d-flex ">
            <p class="blockquote-footer"><i class="fas fa-quote-left"></i> <%= m.comment %></p>
            <p class="ml-2"><%= link_to "Delete", bookmark_path(m), method: :delete,  data: { confirm: "Are you sure?" } %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
